<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<fx:root id="BorderPane" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" type="BorderPane"
         xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1">
    <center>
        <VBox>
            <children>
                <Label text="Propriétés du document" GridPane.columnSpan="2147483647" GridPane.rowIndex="1">
                    <font>
                        <Font size="18.0"/>
                    </font>
                </Label>
                <GridPane fx:id="uiGrid" hgap="10.0" maxHeight="1.7976931348623157E308" styleClass="gray-light"
                          vgap="10.0" GridPane.rowIndex="2">
                    <columnConstraints>
                        <ColumnConstraints hgrow="NEVER"/>
                        <ColumnConstraints hgrow="NEVER"/>
                        <ColumnConstraints halignment="CENTER" hgrow="NEVER"/>
                        <ColumnConstraints hgrow="NEVER"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints vgrow="NEVER"/>
                        <RowConstraints vgrow="NEVER"/>
                        <RowConstraints vgrow="NEVER"/>
                        <RowConstraints vgrow="NEVER"/>
                        <RowConstraints maxHeight="1.7976931348623157E308" valignment="TOP" vgrow="NEVER"/>
                        <RowConstraints vgrow="NEVER"/>
                        <RowConstraints vgrow="NEVER"/>
                        <RowConstraints vgrow="NEVER"/>
                        <RowConstraints minHeight="10.0" vgrow="NEVER"/>
                        <RowConstraints minHeight="10.0" vgrow="NEVER"/>
                    </rowConstraints>
                    <children>
                        <Label text="Titre du document :" GridPane.rowIndex="0"/>
                        <TextField fx:id="uiTitre" GridPane.columnIndex="1" GridPane.columnSpan="3"
                                   GridPane.rowIndex="0"/>

                        <!-- Date filter -->
                        <HBox GridPane.rowIndex="1">
                            <children>
                                <Label text="Avec période "/>
                                <CheckBox fx:id="uiPeriod"/>
                                <Label text=" du :"/>
                            </children>
                            <padding>
                                <Insets bottom="10.0" right="10.0" top="10.0"/>
                            </padding>
                        </HBox>
                        <DatePicker fx:id="uiPeriodeDebut" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                        <Label text="au :" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
                        <DatePicker fx:id="uiPeriodeFin" GridPane.rowIndex="1" GridPane.columnIndex="3"/>

                        <Label text="Non horodatées : " GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                        <CheckBox fx:id="uiHorodateFilter" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                        <Label text="Système d'endiguement :" GridPane.rowIndex="3"/>
                        <ComboBox fx:id="uiSystemEndiguement" maxWidth="1.7976931348623157E308" prefWidth="150.0"
                                  GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.rowIndex="3"/>

                        <Label text="Prestations :" GridPane.rowIndex="4"/>
                        <ListView fx:id="uiPrestations" maxWidth="1.7976931348623157E308" minHeight="100.0"
                                  prefHeight="150.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.columnSpan="3"
                                  GridPane.rowIndex="4"/>
                        <Button fx:id="uiSelectAll" mnemonicParsing="false" onAction="#selectAll"
                                styleClass="btn-single" text="Tout sélectionner" textAlignment="CENTER" wrapText="true"
                                GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="5"
                                GridPane.rowSpan="2" GridPane.valignment="CENTER"/>

                        <Button fx:id="uiGenerate" mnemonicParsing="false" onAction="#generateReport"
                                styleClass="btn-single" text="Générer" textAlignment="CENTER" wrapText="true"
                                GridPane.columnIndex="3" GridPane.halignment="CENTER" GridPane.rowIndex="5"
                                GridPane.rowSpan="2" GridPane.valignment="CENTER"/>
                        <ProgressBar fx:id="uiProgress" maxWidth="1.7976931348623157E308" visible="false"
                                     GridPane.columnSpan="3" GridPane.halignment="CENTER" GridPane.rowIndex="5"
                                     GridPane.valignment="CENTER"/>

                        <Label fx:id="uiProgressLabel" alignment="CENTER" visible="false" GridPane.columnSpan="3"
                               GridPane.halignment="CENTER" GridPane.rowIndex="6">
                            <font>
                                <Font name="System Italic" size="13.0"/>
                            </font>
                        </Label>

                    </children>
                    <GridPane.margin>
                        <Insets/>
                    </GridPane.margin>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                </GridPane>
            </children>
            <padding>
                <Insets bottom="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
    </center>
    <opaqueInsets>
        <Insets/>
    </opaqueInsets>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
</fx:root>

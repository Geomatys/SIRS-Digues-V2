                        </content>
                    </ScrollPane>
                </Tab>

                <!-- REFERENCE TABS -->
                <FXFreeTab fx:id="ui_observations" text="%observations"/>
                <FXFreeTab fx:id="ui_photos" text="%photos"/>

            </tabs>
        </TabPane>
    </center>

